{
	"title": "Contractor",
	"type": "object",
	"format": "grid",
	"properties": {
		"id": {
			"title": "Contractor ID",
			"type": "number",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 1
		},
		"name": {
			"title": "Contractor name",
			"type": "string",
			"format": "text",
			"options": {
				"grid_columns": 12
			},
			"minLength": 2,
			"maxLength": 255,
			"propertyOrder": 5
		},
		"status": {
			"title": "Contractor status",
			"type": "number",
			"enum": [1,2,3,4],
			"default": 1,
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 2
		},
		"created_at": {
			"title": "Created date",
			"type": "string",
			"format": "datetime",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 3
		},
		"changed_at": {
			"title": "Last changes date",
			"type": "string",
			"format": "datetime",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 4
		},
		"info": {
			"title": "Contractor info",
			"type": "object",
			"options": {
				"grid_columns": 12
			},
			"properties": {
				"name": {
					"title": "Contractor name",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"hidden": true
					},
					"properties": {
						"text": {
							"title": "Enter the name of product",
							"type": "string",
							"format": "text",
							"template": "{{pname}}",
							"watch": {
								"pname": "root.name"
							},
							"maxLength": 255
						}
					}
				},
				"name_full": {
					"title": "Contractor full name",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"text": {
							"title": "Enter the full name of product",
							"type": "string",
							"format": "text",
							"maxLength": 255
						}
					}
				},
				"summary": {
					"title": "Contractor summary information",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"text": {
							"title": "Enter summary information of product",
							"type": "string",
							"format": "textarea",
							"options": {
								"input_height": "100px"
							}
						}
					}
				},
				"icon": {
					"title": "Contractor icon image url",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"image_url": {
							"type": "string",
							"title": "Upload icon image",
							"format": "url",
							"media": {
								"type": "image/*"
							},
							"options": {
								"upload": true
							},
							"links": [
								{
									"href": "{{self}}",
									"mediaType": "image/*"
								}
							]
						}
					}
				},
				"details": {
					"type": "array",
					"title": "Details",
					"format": "tabs",
					"minItems": 1,
					"items": {
						"title": "Detail",
						"oneOf": [
							{
								"$ref": "js/slider.json"
							},
							{
								"$ref": "js/info.json"
							}
						]
					}
				}
			},
			"propertyOrder": 6
		}
	},
	"required": ["id", "status", "created_at", "changed_at", "name"]
}