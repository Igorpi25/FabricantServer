{
	"type": "object",
	"title": "Продукт",
	"format": "grid",
	"additionalProperties": true,
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {
		"contractorid": {
			"title": "ИД производителя",
			"type": "number",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 1
		},
		"id": {
			"title": "ИД продукта",
			"type": "number",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 2
		},
		"name": {
			"title": "Наименование",
			"type": "string",
			"format": "text",
			"options": {
				"grid_columns": 9
			},
			"minLength": 2,
			"maxLength": 255,
			"propertyOrder": 5
		},
		"status": {
			"title": "Статус",
			"type": "number",
			"enum": [1,2,3,4],
			"default": 1,
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 3
		},
		"price": {
			"title": "Цена",
			"options": {
				"grid_columns": 3
			},
			"type": "number",
			"minimum": 0,
			"maximum": 9999999999,
			"propertyOrder": 6
		},
		"changed_at": {
			"title": "Изменения",
			"type": "string",
			"format": "datetime",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 4
		},
		"info": {
			"title": "Информация",
			"type": "object",
			"options": {
				"grid_columns": 12,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {
				"name": {
					"title": "Наименование",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"hidden": true
					},
					"properties": {
						"text": {
							"title": "Введите наименование",
							"type": "string",
							"format": "text",
							"template": "{{pname}}",
							"watch": {
								"pname": "root.name"
							},
							"maxLength": 255
						}
					}
				},
				"name_full": {
					"title": "Полное наименование",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"text": {
							"title": "Введите полное наименование",
							"type": "string",
							"format": "text",
							"maxLength": 255
						}
					}
				},
				"price": {
					"title": "Цена",
					"type": "number",
					"options": {
						"hidden": true
					},
					"template": "{{pprice}}",
					"watch": {
						"pprice": "root.price"
					},
					"minimum": 0,
					"maximum": 9999999999
				},
				"summary": {
					"title": "Описание",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"text": {
							"title": "Введите описание",
							"type": "string",
							"format": "textarea",
							"options": {
								"input_height": "100px"
							}
						}
					}
				},
				"icon": {
					"title": "Иконка",
					"description": "Первый слайд автоматически выбирается для иконки",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"image_url": {
							"type": "string",
							"title": "Выберите изображение",
							"format": "url",
							"readOnly": true,
							"media": {
								"type": "image/*"
							},
							"links": [
								{
									"href": "{{self}}",
									"mediaType": "image/*"
								}
							]
						}
					}
				},
				"details": {
					"type": "array",
					"title": "Дополнительная информация",
					"format": "tabs",
					"minItems": 1,
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"items": {
						"title": "Элемент",
						"oneOf": [
							{
								"$ref": "js/slider.json"
							},
							{
								"$ref": "js/info.json"
							}
						]
					}
				}
			},
			"propertyOrder": 7
		}
	},
	"required": ["contractorid", "id", "status", "changed_at", "name"]
}