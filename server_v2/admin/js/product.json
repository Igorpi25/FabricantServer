{
	"type": "object",
	"title": "Product",
	"format": "grid",
	"properties": {
		"contractorid": {
			"title": "Contractor ID",
			"type": "number",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 1
		},
		"id": {
			"title": "Product ID",
			"type": "number",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 2
		},
		"name": {
			"title": "Product name",
			"type": "string",
			"format": "text",
			"options": {
				"grid_columns": 9
			},
			"minLength": 2,
			"maxLength": 255,
			"propertyOrder": 5
		},
		"status": {
			"title": "Product status",
			"type": "number",
			"enum": [1,2,3,4],
			"default": 1,
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 3
		},
		"price": {
			"title": "Product price",
			"options": {
				"grid_columns": 3
			},
			"type": "number",
			"minimum": 0,
			"maximum": 9999999999,
			"propertyOrder": 6
		},
		"changed_at": {
			"title": "Last changes date",
			"type": "string",
			"format": "datetime",
			"options": {
				"grid_columns": 3
			},
			"readOnly": true,
			"propertyOrder": 4
		},
		"info": {
			"title": "Product info",
			"type": "object",
			"options": {
				"grid_columns": 12
			},
			"properties": {
				"name": {
					"title": "Product name",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"hidden": true
					},
					"properties": {
						"text": {
							"title": "Enter the name of product",
							"type": "string",
							"format": "text",
							"template": "{{pname}}",
							"watch": {
								"pname": "root.name"
							},
							"maxLength": 255
						}
					}
				},
				"name_full": {
					"title": "Product full name",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"text": {
							"title": "Enter the full name of product",
							"type": "string",
							"format": "text",
							"maxLength": 255
						}
					}
				},
				"price": {
					"title": "Product price",
					"type": "number",
					"options": {
						"hidden": true
					},
					"template": "{{pprice}}",
					"watch": {
						"pprice": "root.price"
					},
					"minimum": 0,
					"maximum": 9999999999
				},
				"summary": {
					"title": "Product summary information",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"text": {
							"title": "Enter summary information of product",
							"type": "string",
							"format": "textarea",
							"options": {
								"input_height": "100px"
							}
						}
					}
				},
				"icon": {
					"title": "Product icon image url",
					"description": "Frist image from slides array will be auto selected for icon",
					"type": "object",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"properties": {
						"image_url": {
							"type": "string",
							"title": "Uploaded icon image url of product",
							"format": "url",
							"readOnly": true,
							"media": {
								"type": "image/*"
							},
							"links": [
								{
									"href": "{{self}}",
									"mediaType": "image/*"
								}
							]
						}
					}
				},
				"details": {
					"type": "array",
					"title": "Details",
					"format": "tabs",
					"minItems": 1,
					"items": {
						"title": "Detail",
						"oneOf": [
							{
								"$ref": "js/slider.json"
							},
							{
								"$ref": "js/info.json"
							}
						]
					}
				}
			},
			"propertyOrder": 7
		}
	},
	"required": ["contractorid", "id", "status", "changed_at", "name"]
}